{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true
  },
  "include": ["src", "declarations.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
